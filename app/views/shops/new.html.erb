
<% if flash[:notice] %>
      <div class="index-notice notification is-link">
        <%= flash[:notice] %>
      </div>
    <% end %>
  
  
    <% if flash[:alert] %>
      <div class="index-notice notification is-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <section class="container">
    

      <div class="columns is-multiline">
        <div class="column is-8 is-offset-2 register">
          <div class="columns listavin-color">
            <div class="column left">
              <h1 class="title is-2 has-text-info has-text-centered lexend">お店を登録する </h1>
              <h2 class="subtitle colored is-5 has-text-danger has-text-centered">レストランのワイン管理を簡単に。</h2>
              <br>
              <p class="is-size-6 has-text-grey-darker">お店の名前とEmailとパスワードで<br>かんたんに登録ができます。</p>
              <br>
              <p class="is-size-6 has-text-grey-darker">スムーズな対応を実現することにより、<br>
              接客のクオリティアップに貢献します。</p>
              <br>
              <br>
              <p class="has-text-dark">さあ、はじめましょう。</p>
            </div>
            <div class="column right has-text-centered">
              <h1 class="title is-4 has-text-grey">新規店舗登録</h1>
              <%= form_with model: @shop do |f| %>
                <div class="field">
                  <div class="control">
                    <%= f.label :name, "店舗名" %>
                    <%= f.text_field :name, class:"input is-medium" %>
                  </div>
                </div>

                <div class="field">
                  <div class="control">
                    <%= f.label :email, "メールアドレス" %>
                    <%= f.email_field :email, class: "input is-medium" %>
                  </div>
                </div>
                <div class="field">
                  <div class="control">
                    <%= f.label :password, "パスワード" %>
                    <%= f.password_field :password, class: "input is-medium" %>
                  </div>
                </div>
                <div class="field">
                  <div class="control">
                    <%= f.label :password_confirmation, "パスワード確認用" %>
                    <%= f.password_field :password_confirmation, class: "input is-medium" %>
                  </div>
                </div>
                <br>
                <div class="field">
                  <div class="control">
                    <%= f.submit "作成する", class: "button is-block is-info is-fullwidth is-medium is-rounded" %>
                  </div>
                </div>
              </form>
              <% end %>
            </div>
          </div>
        </div>
        <div class="column is-8 is-offset-2">
          <br>
          <nav class="level">
            <div class="level-left">
              <div class="level-item">
                <span class="icon">
                  <%= link_to "https://twitter.com" do %>
                  <i class="fab fa-twitter"></i>
                  <% end %>
                </span> &emsp;
                <span class="icon">
                  <%= link_to "https://facebook.com" do %>
                  <i class="fab fa-facebook"></i>
                  <% end %>
              </div>
            </div>
            <div class="level-right">
              <small class="level-item" style="color: var(--textLight)">
                &copy; Listavin
              </small>
            </div>
          </nav>
        </div>
      </div>
    </section>

<style>
    :root {
      --brandColor: hsl(166, 67%, 51%);
      /* box-shadow: 2px 2px 2px 6px rgba(0,0,0,0.22); */
      --background: rgb(247, 247, 247);
      --textDark: hsla(0, 0%, 0%, 0.66);
      --textLight: hsla(0, 0%, 0%, 0.33);
    }

body {
      background: var(--background);
      height: 100vh;
      color: var(--textDark);
    }

    .field:not(:last-child) {
      margin-bottom: 1rem;
    }

    .register {
      margin-top: 10rem;
      background: white;
      border-radius: 10px;
      box-shadow: 2px 2px 2px 6px rgba(0,0,0,0.22)
    }

    .left,
    .right {
      padding: 4.5rem;
    }

    .left {
      border-right: 5px solid var(--background);
    }

    .left .title {
      font-weight: 800;
      letter-spacing: -2px;
    }

    .left .colored {
      color: var(--brandColor);
      font-weight: 500;
      margin-top: 1rem !important;
      letter-spacing: -1px;
    }

    .left p {
      color: var(--textLight);
      font-size: 1.15rem;
    }

    .right .title {
      font-weight: 800;
      letter-spacing: -1px;
    }

    .right .description {
      margin-top: 1rem;
      margin-bottom: 1rem !important;
      color: var(--textLight);
      font-size: 1.15rem;
    }

    .right small {
      color: var(--textLight);
    }

    input {
      font-size: 1rem;
    }

    input:focus {
      border-color: var(--brandColor) !important;
      box-shadow: 0 0 0 1px var(--brandColor) !important;
    }

    .fab,
    .fas {
      color: var(--textLight);
      margin-right: 1rem;
    }

  </style>