          </article>

          <article class="message is-warning is-small">
            <div class="message-header">
              <p class="icon-text">
                <span class="icon"><i class="far fa-calendar-alt"></i></span>
                <span>ヴィンテージ</span>  
              </p>
            </div>  
            <div class="message-body">
              <p><%=@wine.vintage%></p>
            </div>
          </article>
            
          <article class="message is-warning is-small">
            <div class="message-header">
              <p class="icon-text">
                <span class="icon"><i><%= image_tag 'grape.svg', class: "image is-16x16"%></i></span>
