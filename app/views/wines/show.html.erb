            </div>  
            <div class="message-body">
              <p><%=@wine.stock%></p>
            </div>
          </article>

          <article class="message is-warning is-small">
            <div class="message-header">
              <p class="icon-text">
                <span class="icon"><i class="fas fa-book"></i></span>
                <span>オンリスト</span>  
              </p>
            </div>  
            <div class="message-body">
              <% if @wine.onlist %>
                  <p><%=  "オンリスト" %></p>
                  <% else %>
                  <p><%= "未掲載" %></p>
